<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/continue_select_color"> <!-- The ripple will be red -->

    <!-- the normal bg color will be light grey -->
    <item>
        <color android:color="@color/continue_select_color" />
    </item>

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>

    <item
        android:left="@dimen/minus_two_dp"
        android:right="@dimen/minus_two_dp"
        android:top="@dimen/forty_dp">
        <shape android:shape="line">

            <stroke
                android:width="6dp"
                android:color="@color/orange" />
        </shape>
    </item>
</ripple>