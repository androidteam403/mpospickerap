<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#00adef"> <!-- The ripple will be red -->

    <!-- the normal bg color will be light grey -->
    <item>
        <color android:color="#00adef" />
    </item>

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>

    <item
        android:left="@dimen/minus_two_dp"
        android:right="@dimen/minus_two_dp"
        android:top="@dimen/forty_dp">
        <shape android:shape="line">
            <padding android:bottom="@dimen/one_dp" />

            <stroke
                android:width="@dimen/four_dp"
                android:color="#0475a1" />
        </shape>
    </item>
</ripple>