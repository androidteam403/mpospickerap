<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:textStyle="bold"
        android:textSize="@dimen/dimen10sp"
        android:id="@+id/quantity"
        android:fontFamily="@font/roboto_medium"
        android:layout_margin="@dimen/dimen7dp"
       android:layout_alignParentEnd="true"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:padding="14dp">

        <TextView
            android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_9_sp"
        android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
        android:text="@string/ascoril_d_plus_syrup_sugar_free"
        android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:text="@string/rack_id1"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/jumbo"
                android:textSize="@dimen/dimen_9_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g098_98_786"
                android:id="@+id/rack_id"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_9_sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen4dp"
            android:orientation="horizontal">



                     <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/dimen5dp"
                    android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/batch_no"
                             android:textColor="@color/jumbo"
                             android:fontFamily="@font/roboto_medium"
                             android:textSize="@dimen/dimen8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AP364782022"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/dimen8sp"
                        android:id="@+id/batch_no"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
         </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                 android:layout_marginStart="@dimen/dimen18sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/dimen8sp"
                    android:text="Strip MRP"
                    android:textColor="@color/jumbo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="115.50"
                    android:id="@+id/cost"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/dimen8sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_marginStart="@dimen/dimen18sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apollo 24l7 MRP"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/dimen8sp"
                    android:textColor="@color/jumbo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120.00/OMS"
                    android:id="@+id/mrp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/dimen8sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1dp"
        android:layout_below="@id/linear"
        android:background="@color/light_grey" />


</RelativeLayout>
</layout>