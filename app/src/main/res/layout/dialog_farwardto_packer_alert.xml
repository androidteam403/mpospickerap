<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen10dp">

            <ImageView
                android:id="@+id/cancel_icon"
                android:layout_width="@dimen/dimen25dp"
                android:layout_height="@dimen/dimen25dp"
                android:src="@drawable/newcrossblackicon"
                android:layout_gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="forward to packer"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/five_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/twenty_five_dp"
                    android:layout_height="@dimen/twenty_five_dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_circle_tick" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Fully Packed: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/full_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/twenty_five_dp"
                    android:layout_height="@dimen/twenty_five_dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_partial" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Partially Packed : "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/partial_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/twenty_five_dp"
                    android:layout_height="@dimen/twenty_five_dp"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_not_available" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Not Available: "
                    android:textColor="@color/black" />



                <TextView
                    android:id="@+id/not_available_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0"
                    android:textColor="@color/black" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dimen55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notified to Admin."
                    android:textSize="@dimen/dimen13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/fifteen_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="@dimen/dimen30dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginStart="@dimen/dimen1dp"
                    android:src="@drawable/cancelled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Cancelled: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/cancelled_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_bg"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingStart="@dimen/twenty_five_dp"
                    android:paddingTop="@dimen/three_dp"
                    android:paddingEnd="@dimen/twenty_five_dp"
                    android:paddingBottom="@dimen/three_dp"
                    android:text="No"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:background="@drawable/rounded_corners_bg"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingStart="@dimen/twenty_five_dp"
                    android:paddingTop="@dimen/three_dp"
                    android:paddingEnd="@dimen/twenty_five_dp"
                    android:paddingBottom="@dimen/three_dp"
                    android:text="Yes"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</layout>