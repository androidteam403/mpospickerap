<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen10sp"
            android:layout_marginStart="@dimen/dimen10sp"

            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Products"
android:layout_marginLeft="@dimen/dimen5dp"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Qty."
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Status"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
android:layout_marginLeft="@dimen/dimen2dp"
                    android:text="Ascoril D plus Syrup Sugar Free"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tablet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="1/1"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:layout_marginLeft="88dp"
                    android:src="@drawable/ic_circle_tick"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/status_cancel"
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:visibility="gone"
                    android:layout_marginLeft="88dp"
                    android:src="@drawable/ic_not_available" />

                <ImageView
                    android:layout_width="@dimen/dimen20dp"
                    android:layout_height="@dimen/dimen20dp"
                    android:layout_marginLeft="@dimen/dimen30dp"
                    android:rotation="270"
                    android:src="@drawable/partialcirculargreeenorange" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rack ID: "
                    android:layout_marginLeft="@dimen/dimen5dp"

                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:id="@+id/rack_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="G098-98-786"
                    android:textColor="@color/black"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Batch No"
                    android:layout_marginLeft="@dimen/dimen5dp"

                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen80dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Strip MRP"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen30dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Apollo 24/7 MRP"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/dimen10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Batch_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="AP364782022"
                    android:layout_marginLeft="@dimen/dimen10sp"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/Strip_Mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="115.50"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/Apollo_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen50dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="120.00/EPOS"
                    android:textColor="@color/black"
                    android:textSize="9sp" />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:background="@color/text_color_grey"/>

    </RelativeLayout>

</layout>
