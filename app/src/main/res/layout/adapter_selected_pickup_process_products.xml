<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_weight=".7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/price_bold"
                        android:text="Ascoril D Plus SyrupSugar Free"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten_sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rack ID: "
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/ten_sp" />

                        <TextView
                            android:id="@+id/rack_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/price_bold"
                            android:text="G098-98-786"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:gravity="center">


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginEnd="@dimen/five_dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_weight=".7"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Batch No"
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/eight_sp" />

                        <TextView
                            android:id="@+id/batch_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="AP364782022"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Strip MRP"
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/eight_sp" />

                        <TextView
                            android:id="@+id/strip_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="115.50"

                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Apollo 24/7 MRP"
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/eight_sp" />

                        <TextView
                            android:id="@+id/apollo_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="120.00/OMS"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ten_sp" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_weight=".15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen1dp"
                    android:layout_weight=".15" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1dp"
                android:background="@color/light_grey" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="307dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/price_bold"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_11sp" />
        <ImageView
            android:id="@+id/status_update_icon"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:contentDescription="@string/app_name"
            android:rotation="270"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/partialcirculargreeenorange" />


    </RelativeLayout>

</layout>