<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/three_dp"
            android:background="@color/iron" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/seven_dp"
            android:layout_marginBottom="@dimen/seven_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Fullfillment ID : "
                        android:textColor="@color/jumbo"
                        android:textSize="@dimen/thirteen_sp" />

                    <TextView
                        android:id="@+id/filment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Toatal Items : "
                        android:textColor="@color/aluminum"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/total_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ten_sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="Full"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen12sp" />


                <ImageView
                    android:id="@+id/full_status_color"
                    android:layout_width="@dimen/eighteen_dp"
                    android:layout_height="@dimen/eighteen_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:background="@drawable/ic_circular_shape"
                    android:backgroundTint="@color/colorPrimary"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/five_dp"
                    android:src="@drawable/tick_mark"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/partial_status_color"
                    android:layout_width="@dimen/eighteen_dp"
                    android:layout_height="@dimen/eighteen_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:background="@drawable/ic_circular_partial"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/five_dp"
                    android:rotation="270"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/not_available_status_color"
                    android:layout_width="@dimen/eighteen_dp"
                    android:layout_height="@dimen/eighteen_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:background="@drawable/ic_circular_shape"
                    android:backgroundTint="@color/red"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/five_dp"
                    android:visibility="gone"
                    android:src="@drawable/delete_white_icon" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/iron" />
    </RelativeLayout>

    <data>

        <variable
            name="view"
            type="android.view.View" />
    </data>
</layout>