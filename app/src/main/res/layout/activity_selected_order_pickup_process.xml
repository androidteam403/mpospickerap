<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen60dp"
                        android:background="@color/actionbar_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dimen10dp"
                        android:paddingEnd="@dimen/dimen10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/header_back"
                                android:layout_width="@dimen/dimen30dp"
                                android:layout_height="@dimen/dimen30dp"
                                android:contentDescription="@string/app_name"
                                android:onClick="@{()-> callback.onClickBack()}"
                                android:src="@drawable/left_forward_white_arrow" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen10dp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/label_pickup_process"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dimen16sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="Box ID: "
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="2555"
                                        android:textColor="@color/white" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/five_dp"
                        android:paddingTop="@dimen/ten_dp"
                        android:paddingEnd="@dimen/five_dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Fullfillment ID:"
                                        android:textColor="@color/text_color_grey"
                                        android:textSize="@dimen/dimen10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="887766"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twelve_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Total Items:"
                                        android:textColor="@color/text_color_grey"
                                        android:textSize="@dimen/dimen10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="5"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twelve_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Start time:"
                                        android:textColor="@color/text_color_grey"
                                        android:textSize="@dimen/dimen10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="9:45 AM"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twelve_sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Status: "
                                        android:textColor="@color/text_color_grey"
                                        android:textSize="@dimen/dimen10sp" />

                                    <ImageView
                                        android:layout_width="@dimen/twenty_dp"
                                        android:layout_height="@dimen/twenty_dp"
                                        android:layout_marginStart="@dimen/five_dp"
                                        android:contentDescription="@string/app_name"
                                        android:src="@drawable/ic_circular_partial" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/five_dp"
                                        android:background="@drawable/rounded_corners_bg"
                                        android:backgroundTint="@color/green"
                                        android:fontFamily="@font/roboto_medium"
                                        android:paddingStart="@dimen/seven_dp"
                                        android:paddingTop="@dimen/three_dp"
                                        android:paddingEnd="@dimen/seven_dp"
                                        android:paddingBottom="@dimen/three_dp"
                                        android:text="collecting"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/ten_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Total Duration: "
                                        android:textColor="@color/text_color_grey"
                                        android:textSize="@dimen/dimen10sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="0:25:20"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/square_stroke_yellow_bg"
                            android:orientation="horizontal"
                            android:padding="@dimen/ten_dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Customer type"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Normal Priority"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Order date"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="19 Feb, 2020-10:10:44"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Shipping method Type"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Home delivery"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Payment source"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Online"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Order source"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Apollo247"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Delivery date"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="19 Feb, 2020-02:30:00"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Stock status"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Available"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Order type"
                                    android:textColor="@color/text_color_grey"
                                    android:textSize="@dimen/dimen10sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Cart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:background="@drawable/stroke_yellow_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_marginEnd="@dimen/ten_dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Products"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/twelve_sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Qty."
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/twelve_sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Status"
                                android:textColor="@color/text_color_grey"
                                android:textSize="@dimen/twelve_sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selected_pickup_process_product_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:paddingStart="@dimen/five_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingEnd="@dimen/five_dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Present Status"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/twelve_sp" />

                    <LinearLayout
                        android:id="@+id/item_status_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_dp"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:layout_marginBottom="@dimen/fifty_dp"
                        android:background="@drawable/dashboard_edit_bg"
                        android:gravity="center_vertical"
                        android:onClick="@{()-> callback.onClickItemStatusDropdown()}"
                        android:orientation="horizontal"
                        android:padding="@dimen/five_dp">

                        <ImageView
                            android:layout_width="@dimen/fifteen_dp"
                            android:layout_height="@dimen/fifteen_dp"
                            android:contentDescription="@string/app_name"
                            android:rotation="270"
                            android:src="@drawable/partialcirculargreeenorange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Partially Filled"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/dimen15dp"
                                android:layout_height="@dimen/dimen15dp"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/app_name"
                                android:rotation="270"
                                android:src="@drawable/ic_baseline_arrow_back_ios_24" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="go to next order"
            android:textAllCaps="true"
            android:textColor="@color/text_color_grey" />
    </RelativeLayout>

    <data>

        <variable
            name="callback"
            type="com.thresholdsoft.mpospicker.ui.selectedorderpickupprocess.SelectedOrderPickupProcessMvpPresenter" />
    </data>
</layout>