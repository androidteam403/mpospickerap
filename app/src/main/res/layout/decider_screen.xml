<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/decider_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/picktheflow"
                android:fontFamily="@font/roboto_regular"
                android:text="Pick the flow to continue"
                android:textAllCaps="true"
                android:textSize="@dimen/dimen12sp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/picker_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/five_dp"
                    android:background="@color/continue_select_color"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/dimen10dp"
                    android:text="Picker Flow"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/packer_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five_dp"
                    android:background="@color/continue_select_color"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/dimen10dp"
                    android:text="Packer Flow"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50dp"
                android:layout_marginStart="@dimen/dimen22dp"
                android:layout_marginEnd="@dimen/dimen22dp"
                android:layout_marginTop="@dimen/dimen45dp"
                android:background="@drawable/btn_signin_ripple_effect"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="@dimen/seven_dp"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="@color/black"
                tools:ignore="ButtonStyle" />
        </LinearLayout>



    </RelativeLayout>


</layout>
