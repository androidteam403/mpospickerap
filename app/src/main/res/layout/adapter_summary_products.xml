<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/ten_dp"
            android:paddingTop="@dimen/seven_dp"
            android:paddingEnd="@dimen/ten_dp"
            android:paddingBottom="@dimen/seven_dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:fontFamily="@font/roboto_medium"
                android:text="Products"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen12sp" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.15"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="1/1"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen12sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.15"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/full_status_color"
                    android:layout_width="@dimen/fifteen_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_circular_shape"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="@dimen/three_dp"
                    android:src="@drawable/tick_mark"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/partial_status_color"
                    android:layout_width="@dimen/fifteen_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_circular_partial"
                    android:rotation="270"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/not_available_status_color"
                    android:layout_width="@dimen/fifteen_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_circular_shape"
                    android:backgroundTint="@color/red"
                    android:padding="@dimen/three_dp"
                    android:src="@drawable/delete_white_icon"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/continue_unselect_color" />

    </RelativeLayout>
</layout>
