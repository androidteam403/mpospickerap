<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen30dp"
        android:paddingBottom="@dimen/dimen30dp">

        <ImageView
            android:layout_width="@dimen/dimen80dp"
            android:layout_height="@dimen/dimen80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_circle_tick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Forward to Packer"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen20sp" />

        <TextView
            android:id="@+id/goto_open_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:background="@drawable/rounded_corners_bg"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="@dimen/dimen10dp"
            android:paddingTop="@dimen/dimen5dp"
            android:paddingEnd="@dimen/dimen10dp"
            android:paddingBottom="@dimen/dimen5dp"
            android:text="Go to Open Orders"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>
